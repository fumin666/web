/*一级页面大体布局相关定义*/
fantaColor = #FF9023
baseColor = #000000
mainBgColor = #ffffff
lightWordColor = #9c9796
darkWordColor = #392c28
redWordColor = #B92329
mainColor = #ffffff
bgColor = #FF9023
nav-height = 45px
color = #5582A5
color-hover = #01B6FF
color-active = #0083bb
table-bg = #091627
table-bg1 = #0C1427
copyright-color = #bac9db
barColor = #414D5F
//nav-bg = #dcdee0
nav-bg = #ffffff
main-content-updown = linear-gradient(to right, rgba(22, 137, 239, 0) 8%, #ff846e, rgb(255, 132, 110), #ff846e, rgba(22, 137, 239, 0) 92%)
tableHeaderBg = #e4e7ed
tableHeaderTitle = #9c9796
tableHoverBg = #edf0f5
btnDefaultColor = #fff
lightFontColor = rgba(0,0,0,.65)

/*通用样式*/
body, html
  width 100%
  height 100%

body
  display flex
  min-height 100vh
  flex-direction column

a
  color #3d454c

.clr
  clear both

#app
  background-color: mainBgColor;
  min-width 1200px
  font-family "Microsoft YaHei", "Helvetica Neue", "Helvetica Arial", "sans-serif"
  -webkit-font-smoothing antialiased
  -moz-osx-font-smoothing grayscale
  display flex
  min-height 100vh
  flex-direction column
  & .index-body
    display flex
    flex 1
    & main
      width 100%
      overflow hidden

/*字体颜色*/
.bgcolor
  background: #fff !important;
.defaultword
  color:rgba(0,0,0,0.85);
.lightword
  color lightWordColor

.darkword
  margin-left 10px
  color darkWordColor

.redword
  color redWordColor

/*内容*/
.content
  width calc(100% - 10px)
  //min-height 610px
  margin 10px auto 0 auto
  font-size 12px
  .card-title
    .iconfont
      position relative !important
      top 2px !important
      color bgColor
      font-weight normal
  .card-enter
    float right
    margin-left 20px
    cursor pointer
    font-size 12px
    font-weight 100
    a
      color darkWordColor
      &hover
        color baseColor
    &hover
      color baseColor
      cursor pointer
/*主区上下条*/
.main-card-content
  position relative
  &:before,&:after
    position absolute
    width 100%
    background main-content-updown
    display inline-block
    left 0
    content ''
  &:before
    top 0
  &:after
    bottom 0
/*模块标题*/
#index-body
  .card-line
    .card-title
      &:before
        background-color theme_iconcolor;
  .s-card-header
    height 40px
    line-height 40px
    border-bottom 1px solid #DCDEE2
    .child-title
      color color-active

/*一级页面自定义表格*/
.top-list
  padding 2px 0
  text-align center
  font-size 14px
  color #392c28
  table thead
    background-color #f2f6fc
  table thead tr
    height 30px
    line-height 30px
  table tbody
    box-sizing border-box
    border-top none
  table tbody tr
    box-sizing border-box
    height 33px
    line-height 33px
    border-bottom 1px solid #F0EFF4
  table thead tr th
    width 72px

.tableList .item ul li
  // border-bottom 1px solid #F0EFF4

.tableList .item ul li div
  display inline-block
  height 28px
  line-height 28px

.s-card
  .s-card-body
    padding 0
/*面包屑*/
.breadcrumb-box
  background-color #e9eef7
  color rgba(0,0,0,.65)
  .s-breadcrumb-item
    &:last-child
      .s-breadcrumb-item-inner
        color rgba(0,0,0,.65)
  .s-breadcrumb-item-inner
    color rgba(0,0,0,.45)
    &:hover
      color #199fed
/*滚动条*/
.sysScrollHeight
  height calc(100vh - 153px)
/*头部*/
#headBar
  .header-bg
    height 40px
    font-size 14px
    background background linear-gradient(to right, #414D5F, #414D5F)
    color mainColor
    & .s-col
      height 40px
      line-height 40px

    & .left-info
      display flex
      & .logo-icon
        width 390px
        height 100%
        cursor pointer
        img
          margin-top 9px
          margin-left 30px
    & .right-info
      display flex
      justify-content flex-end
      margin-right 30px
      & i
        font-size 16px
        cursor pointer
      & .search-btn
        iactive
          color mainBgColor
      & .search-btn
        ihover
          cursor pointer
          color lightWordColor
          text-shadow 0 0 10px color-hover
      & .head-handler-btns
        display flex
        & span
          width 40px
          height 40px
          text-align center
          & a iactive
            color mainBgColor
          & a ihover
            cursor pointer
            color lightWordColor
            text-shadow 0 0 10px color-hover
      & .user-info
        cursor pointer
        font-size 12px
        color mainColor
      & .user-infohover
        color lightWordColor
      & .user-infoafter
        display inline-block
        width 10px
        height 10px
        content ""
        margin-bottom 1px
        border-right 1px solid color-hover
  .scrollheight
    max-height 500px
/*主题切换*/
.s-popover
  min-width 50px
  & .selectBlock
    width 50px
    height 20px
    color #fff
    text-align center
    line-height 20px
    cursor pointer
  & .top
    margin-top 2px
/*底部*/
.s-footer
  position absolute
  left 0
  bottom 0
  width 100%
  min-width: 1200px
  text-align center
  a
    text-decoration none
    outline none
    i.s-tooltip
      outline none
  .s-footer-wrapper
    display flex
    /*底部加背景色*/
    background-image: url(../../../static/images/homePages/fanta/footerLight.png);
    justify-content space-between
  .s-footer-time
    display flex
    align-items center
    font-size 14px
    color #8fa2b2
    width 300px
    height nav-height
  .s-footer-time
    margin-right 30px
    & > div
      width 100%
      text-align right
  .s-footer-nav
    position relative
    box-sizing border-box
    width 800px
    height nav-height
    //background-image: linear-gradient(to top, #f7f7f7, #fcfcfc);
    border-radius 22px
    background-size 50% 100%
    //box-shadow: 0 3px 6px rgba(0, 0, 0, .1), 0 12px 27px #fff inset;
    /*box-shadow 0px 3px 6px rgba(135, 188, 255, .4)*/
    /*底部菜单背景色*/
    //background nav-bg
    //border: 1px solid nav-bg;
    & > ul
      display flex
      justify-content space-around
      box-sizing border-box
      width 100%
      height 48px
      padding 0 nav-height - 21px
      & > li
        position relative
        list-style none
        width 48px
        height 48px
        line-height 48px
        background-color #fff
        border-radius 50%
        box-shadow: 0px 2px 8px rgba(120, 141, 171, 0.67);
        & > a
          display inline-block
          width 48px
          height 48px
          & > i
            color #74849a
            font-size 20px
            transition all 0.1s ease-out
        &:hover
          background-color: theme_iconcolor
        &:hover a i
          height 48px
          font-size 20px
          color #fff
      .active
        border-radius 50%
        display inline-block
        background-color: theme_iconcolor
        & i
          height 48px
          font-size 20px
          color #fff
        &:after
          content: "";
          display inline-block
          width 4px;
          height 4px;
          background-color #444F61
          position absolute
          bottom -12px
          left 50%
          border-radius 50%
          margin-left -2px

.copyright
  width 100%
  height 20px
  line-height 20px
  font-size 12px
  color copyright-color
  background mainBgColor

/*一级页面按钮*/
.accountBtns
  width: 100%
  margin-bottom 10px
  & li
    float left
    width calc(50% - 5px);
    height 30px
    line-height 30px
    color rgba(0,0,0,.65)
    background #FFFFFF;
    box-shadow 0px 0px 4px rgba(123, 134, 164, 0.15), 0px 0px 6px rgba(105, 126, 147, 0.15);
    border-radius 2px;
    font-size 14px
    margin-bottom 10px
    padding 0 10px
    box-sizing border-box
    overflow hidden
    cursor pointer
    & i
      margin-right 4px
      font-size 16px
      color rgba(0,0,0,.65)
      position relative
      top 1px
    & span
      vertical-align top
  & li:nth-of-type(even)
    margin-left 10px
  & li:hover
    color: #ffffff;
    background: theme_iconcolor;
    box-shadow:none;
    border-color: theme_iconcolor;
    & i
      color #fff

