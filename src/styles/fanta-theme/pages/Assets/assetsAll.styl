/* 资产详情页面 */
#assetsDetailConstructor {
  width: 100%;
  height: calc(100vh - 190px);
  display: flex;
  overflow-x: hidden;
  .left_page {
    width: 235px;
    min-width: 235px;
    height: 100%;
    .left_top {
      box-sizing: border-box;
      position: relative;
      line-height: 30px;
      font-size: 16px;
      padding: 10px 10px 10px 20px;
      height: 170px;
      background: linear-gradient(57.98deg, theme_iconcolor 0%, theme_iconcolor05 89.96%);
      .left_title {
        opacity: 0.45;
      }
      .left_title {
        opacity: 0.85;
      }
      img {
        position: absolute;
        right: 10px;
        top: 10px;
      }
    }
    .left_bottom {
      border-right: 1px solid #DCDEE2;
      height: calc(100% - 170px);
      .s-menu-vertical.s-menu-light:after {
        width: 0px;
        height: 100%;
        top: 0;
        right: 0;
        z-index: 1;
      }
    }
  }
  .right_page {
    width: calc(100% - 235px);
    height: 100%;
    .right_top {
      height: 170px;
      background: theme_bgcolor2
      .s-carousel {
        height: 100%;
      }
      .s-carousel-container {
        height: 100%;
      }
      .asset_carousel {
        padding: 30px 10px;
        box-sizing: border-box;
        height: 170px;
        display: flex;
        .column {
          width: 33.3%;
          flex-direction: column;
          .asset-info {
            height: 33.3%;
            font-size: 14px;
            .asset-title {
              height: 100%;
              text-overflow: ellipsis;
              white-space: nowrap;
              overflow: hidden;
              padding-left: 30px;
            }
            .asset-value {
              height: 100%;
              display: -webkit-box;
              -webkit-box-orient: vertical;
              -webkit-line-clamp: 2;
              overflow: hidden;
              word-break: break-all;
            }
          }
        }
      }
    }
    .right_bottom {
      height: calc(100% - 170px);
    }
  }
}
