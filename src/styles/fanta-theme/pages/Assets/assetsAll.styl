.waterfall
  margin-top 10px
  position relative
  padding-top 1px
  border-top solid 1px #e9eef7
  border-left solid 1px #e9eef7
  .waterfall-item
    // position absolute
    background: linear-gradient(90deg, rgb(237, 240, 245) 120px, rgb(255, 255, 255) 120px) 0% 0% / auto repeat scroll padding-box border-box rgba(0, 0, 0, 0);
    box-sizing border-box
    border-bottom solid 1px #e9eef7
    border-right solid 1px #e9eef7
    // width 25%
    color rgba(0,0,0,0.65)
    font-size 14px
    overflow hidden
    margin-bottom 0
    transition left,top .5s
    background linear-gradient(90deg, tableHeaderBg 120px, block_bg 120px)
    .s-form-item-error
      top: auto
      bottom -8px
      left 6px
    // &.waterfall-item-2
    //   width 50%
    // &.waterfall-item-3
    //   width 33.33%
    // &.waterfall-item-4
    //   width 25%
    &:hover
      box-shadow 1px 0 50px 0 tableHoverBg inset
    label
      box-sizing border-box
      padding-left 10px
      /*background #031221*/
      height 100%
    .s-form-item-content
      padding-left 5px


