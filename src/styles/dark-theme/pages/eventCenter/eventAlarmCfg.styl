/* pages\Event_AlarmCfg\AlarmAdd.vue */
.alarm-add
  .title
    color title_3
    height 36px
    line-height 36px
    padding-left 3px
    margin-bottom 10px
    font-weight 600
    .s-switch
      float right
  .title-list
    margin-top 20px
  .s-switch
    margin 0
    vertical-align middle
  .s-date-editor
    width 150px
  .tool-bar .s-button + .s-button
    margin-left 10px
  .s-select
    width 150px
  .s-table
    margin-bottom 20px
  .s-form-my-error
    color error-my
    font-size 12px
    line-height 1
    padding-top 4px
    position absolute
    top 100%
    left 0
