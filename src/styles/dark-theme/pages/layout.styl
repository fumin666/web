/*一级页面大体布局相关定义*/

darkColor = #000009
fontColor = #b2b6b9
itemColor = #242E38
baseColor = #6CD2FD
mainBgColor = #19232E
lightWordColor = #B3BECC
darkWordColor = #778DA0
redWordColor = #B92329
