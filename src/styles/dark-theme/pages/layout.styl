/*通用样式*/
body, html
  width 100%
  height 100%

body
  display flex
  min-height 100vh
  flex-direction column

a
  color baseColor

.clr
  clear both

#app
  background-color: mainBgColor;
  min-width: 1200px
  font-family: "Microsoft YaHei","Helvetica Neue","Helvetica Arial","sans-serif"
  -webkit-font-smoothing: antialiased
  -moz-osx-font-smoothing: grayscale
  display: flex
  min-height: 100vh
  flex-direction: column
  & .index-body
    display flex
    flex 1
    & main
      width 100%
      overflow hidden
/*字体颜色*/
.bgcolor
  background: #020c19 !important;
.defaultword
  color:rgba(255,255,255,0.85);
.lightword
  color lightWordColor

.darkword
  margin-left 10px
  color darkWordColor

.redword
  color redWordColor

/*内容*/
.content
  width calc(100% - 10px)
  //min-height 610px
  margin 10px auto 0 auto
  font-size 12px
  .card-title
    color #ffffff
    .iconfont
      position relative !important
      top 2px !important
  .card-enter
    float right
    margin-left 20px
    font-size 12px
    font-weight 100
    cursor pointer
    a
      color darkWordColor
      &hover
        color baseColor
        cursor pointer
    &hover
      color baseColor
      cursor pointer

/*主区上下条*/
.main-card-content
  position relative
  &:before,&:after
    position absolute
    width 100%
    background main-content-updown
    display inline-block
    left 0
    content ''
  &:before
    top 0
  &:after
    bottom 0
.autoOpsfix .autoOperation .MonitorBox
  border-right: 1px dashed #303943;
/*模块标题*/
#index-body
  .card-line
    .card-title
      &:before
        background-color baseColor;
  .s-card-header
    height 40px
    line-height 40px
    border-bottom 1px solid rgba(255, 255, 255, 0.05);
    .child-title
      color color-active

/*一级页面自定义表格*/
.top-list
  padding 2px 0
  text-align center
  font-size 14px
  color lightWordColor
  table thead
    background-color table-bg
  table thead tr
    height 30px
    line-height 30px
  table tbody
    box-sizing border-box
    border 1px solid table-bg1
    border-top none
  table tbody tr
    box-sizing border-box
    height 33px
    line-height 33px
    border-bottom 1px solid table-bg1
  table thead tr th
    width 72px

.tableList .item ul li
  // border-bottom 1px solid table-bg

.tableList .item ul li div
  display inline-block
  height 28px
  line-height 28px

.s-card
  .s-card-body
    padding 0
/*头部*/
#headBar
  .header-bg
    color mainColor
    height 40px
    font-size 14px
    background background linear-gradient(to right, #414D5F, #414D5F)
    & .s-col
      height 40px
      line-height 40px
    & .left-info
      display flex
      & .logo-icon
        width 390px
        height 100%
        cursor pointer
        img
          margin-top 9px
          margin-left 30px
    & .right-info
      display flex
      justify-content flex-end
      margin-right 30px
      & i
        font-size 16px
        color mainColor
        cursor pointer
      & .search-btn
        iactive
          color mainBgColor
      & .search-btn
        ihover
          cursor pointer
          color lightWordColor
          text-shadow 0 0 10px color-hover
      & .head-handler-btns
        display flex
        & span
          width 40px
          height 40px
          text-align center
          & a iactive
            color mainBgColor
          & a ihover
            cursor pointer
            color lightWordColor
            text-shadow 0 0 10px color-hover
      & .user-info
        cursor pointer
        font-size 12px
        color mainColor
      & .user-infohover
        color lightWordColor
      & .user-infoafter
        display inline-block
        width 10px
        height 10px
        content ""
        margin-bottom 1px
        border-right 1px solid color-hover
  .scrollheight
    max-height 500px
/*主题切换*/
.s-popover
  min-width 50px
  & .selectBlock
    width 50px
    height 20px
    color #fff
    text-align center
    line-height 20px
    cursor pointer
  & .top
    margin-top 2px
/*面包屑*/
.breadcrumb-box
  background-color #1f2c3a
/*面包屑*/
.breadcrumb-box
  background-color #1F2C3A
  color rgba(255,255,255,.65)
  .s-breadcrumb-item
    &:last-child
      .s-breadcrumb-item-inner
        color rgba(255,255,255,.65)
  .s-breadcrumb-item-inner
    color rgba(255,255,255,.45)
    &:hover
      color #199fed
/*滚动条*/
.sysScrollHeight
  height calc(100vh - 153px)
.dialogScrollbar
  padding-right 17px
  max-height 600px
#view-box .chartBg
  background: #19232e
.s-footer
  position absolute
  left 0
  bottom 0
  width 100%
  min-width: 1200px
  text-align center
  a
    text-decoration none
    outline none
    i.s-tooltip
      outline none
  .s-footer-wrapper
    display flex
    /*底部加背景色*/
    background-image: url(../../../static/images/homePages/dark/footerDark.png);
    justify-content space-between
  .s-footer-time
    display flex
    align-items center
    font-size 14px
    color color
    width 300px
    height nav-height
  .s-footer-time
    margin-right 30px
    & > div
      width 100%
      text-align right
  .s-footer-nav
    position relative
    box-sizing border-box
    width 800px
    height nav-height
    //background-image: linear-gradient(to top, #f7f7f7, #fcfcfc);
    border-radius 22px
    background-size 50% 100%
    //box-shadow: 0 3px 6px rgba(0, 0, 0, .1), 0 12px 27px #fff inset;
    /*box-shadow 0px 3px 6px rgba(135, 188, 255, .4)*/
    /*底部菜单背景色*/
    //background nav-bg
    //border: 1px solid nav-bg;
    & > ul
      display flex
      justify-content space-around
      box-sizing border-box
      width 100%
      height 48px
      padding 0 nav-height - 21px
      & > li
        position relative
        list-style none
        width 48px
        height 48px
        line-height 48px
        border-radius 50%
        background: #394D60;
        box-shadow: 0px 2px 4px rgba(2, 24, 44, 0.3), inset 0px 1px 0px #57708D;
        & > a
          display inline-block
          width 48px
          height 48px
          & > i
            color #fff
            font-size 20px
            transition all 0.1s ease-out
        &:hover
          background-color: #1991C7
        &:hover a i
          color: #ffffff;
      .active
        background: #1991C7;
        border-radius 50%
        display inline-block
        color: #fff
        & i
          height 48px
          font-size 20px
          color: #fff
        &:after
          content: "";
          display inline-block
          width 4px;
          height 4px;
          background-color #1991C7
          position absolute
          bottom -12px
          left 50%
          border-radius 50%
          margin-left -2px

.copyright
  width 100%
  height 20px
  line-height 20px
  font-size 12px
  color copyright-color
  background mainBgColor
/*一级页面按钮*/
.accountBtns
  width: 100%
  margin-bottom 10px
  & li
    float left
    width calc(50% - 5px);
    color fontColor
    height 30px
    line-height 30px
    background-color itemColor
    border-radius 2px
    font-size 14px
    margin-bottom 10px
    padding 0 10px
    box-sizing border-box
    overflow hidden
    cursor pointer
    & i
      margin-right 4px
      font-size 16px
      color fontColor
      position relative
      top 1px
    & span
      vertical-align top
  & li:nth-of-type(even)
    margin-left 10px
  & li:hover
    background theme_iconcolor
    border-color theme_iconcolor
    color #fff
    & i
      color #fff
