bgColor = #00396d
nav-height = 45px
color = #5582A5
color-hover = #01B6FF
color-active = #0083bb
table-bg = #091627
table-bg1 = #0C1427
copyright-color = #313b47
nav-bg = linear-gradient(-55deg, transparent 60px, rgb(11, 22, 36) 0) right, linear-gradient(55deg, transparent 60px, rgb(11, 22, 36) 0) left
