/*转转转*/
.ring_wrap
  width: calc(100vh - 385px);
  max-width: 400px;
  height: calc(100vh - 385px);
  max-height: 400px;
  left: 20px;

.status_ring, .outside_ring, .inner_ring, .status_inside
  position: absolute;
  top: 0;
  left: 0;
  width: calc(100vh - 385px);
  max-width: 400px;
  height: calc(100vh - 385px);
  max-height: 400px;
  background-size: 100% !important;
  background-repeat: no-repeat;

.status_ring {
  z-index: 1;
  max-width: 300px;
  max-height: 300px;
  position: absolute;
  top: 0;
  left: 0;
  bottom 0
  right 0
  margin auto
  background: url(../../../static/images/homePages/dark/all_bg.png);
  // animation: statusrun 8s ease-in infinite alternate;
}

.status_inside
  position: absolute;
  top: 0;
  left: 0;
  bottom 0
  right 0
  margin auto
  z-index: 2;
  width: calc(100vh - 385px);
  max-width: 230px;
  height: calc(100vh - 385px);
  max-height: 230px;
  background: url(../../../static/images/homePages/dark/scale_bg.png);
  background-size: 100%;
  animation: statusrun 8s ease-in infinite alternate;
.outside_ring
  z-index: 3;
  position: absolute;
  top: 0;
  left: 0;
  bottom 0
  right 0
  max-width: 200px;
  max-height: 200px;
  margin auto
  background: url(../../../static/images/homePages/dark/outer_ring.png);
  animation: outsiderun 8s linear infinite normal;

.inner_wrap
  position: absolute;
  top: 0;
  left: 0;
  bottom 0
  right 0
  margin auto
  width: calc(100vh - 385px);
  max-width: 200px;
  height: calc(100vh - 385px);
  max-height: 200px;

.inner_wrap .inner_ring
  position: absolute;
  top: 0;
  left: 0;
  bottom 0
  right 0
  margin auto
  z-index: 4;
  max-width: 140px;
  max-height: 140px;
  background: url(../../../static/images/homePages/dark/inner_ring.png);
  // animation: innerrun 4s linear infinite;

.inner_wrap .inner_word
  position: absolute;
  z-index: 99;
  width: 100%;
  padding-top: 22%;
  text-align: center;
  top: 20px;

.inner_wrap .inner_word div
  display: block;
  height: 20px;
  line-height: 24px;
  color #0CAF46
  font-size: 16px;
  position: absolute;
  padding-top: 50px;
  text-align: center;
  width: 100%;
  // opacity .85

.inner_wrap .inner_word span
  display: block;
  height: 40px;
  line-height: 60px;
  font-size: 36px;
  position: absolute;
  width: 100%;
  text-align: center;
  top: 92%;

/*运行良好-绿*/
.inner_wrap .inner_word span.green
  color #fff
.inner_wrap .inner_word strong
  color #000
  opacity 0.8
/*运行一般-黄*/
.inner_wrap .inner_word span.yellow
  color #ffb80e

/*运行危险-红*/
.inner_wrap .inner_word span.red
  color #ff0600
@keyframes statusrun
  from {
    transform: rotate(0deg);
    -ms-transform: rotate(0deg);
    -moz-transform: rotate(0deg);
    -webkit-transform: rotate(0deg);
    -o-transform: rotate(0deg);
  }
  to {
    transform: rotate(-60deg);
    -ms-transform: rotate(-60deg);
    -moz-transform: rotate(-60deg);
    -webkit-transform: rotate(-60deg);
    -o-transform: rotate(-60deg);
  }

@keyframes outsiderun
  from {
    transform: rotate(0deg);
    -ms-transform: rotate(0deg);
    -moz-transform: rotate(0deg);
    -webkit-transform: rotate(0deg);
    -o-transform: rotate(0deg);
  }
  to {
    transform: rotate(-360deg);
    -ms-transform: rotate(-360deg);
    -moz-transform: rotate(-360deg);
    -webkit-transform: rotate(-360deg);
    -o-transform: rotate(-360deg);
  }

@keyframes innerrun
  from {
    transform: rotate(0deg);
    -ms-transform: rotate(0deg);
    -moz-transform: rotate(0deg);
    -webkit-transform: rotate(0deg);
    -o-transform: rotate(0deg);
  }
  to {
    transform: rotate(-360deg);
    -ms-transform: rotate(-360deg);
    -moz-transform: rotate(-360deg);
    -webkit-transform: rotate(-360deg);
    -o-transform: rotate(-360deg);
  }

