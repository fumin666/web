.processDetail
  #requestServiceRight
    .netForm
      border 1px solid border_color
      margin: 15px 0 20px 0
      .s-form-item-label
        padding 0px

/**
 * 服务请求控制台
 * src/pages/Process_ServiceRequest/Console.vue
 */
#console
  #go-to-designer
    color original_color
    &:hover
      color original_color

/**
 * 浏览请求条目
 * src/pages/Process_ServiceRequest/ConsoleTabs/ViewServiceRequest.vue
 */
#viewServiceRequest
  .serviceRequestLists
    & .image-asset
      &:hover
        .request-name
          color theme_iconcolor

/**
 * 服务请求控制台-我提交的申请
 * src/pages/Process_ServiceRequest/ConsoleTabs/MyApplication.vue
 */
#c-myApplication
  .jump-link
    color link_text
  .s-table .s-table-body .s-table-row
    .iconfont.disabled
      color gray_l3_text

/**
 * 服务请求控制台-我关注的列表
 * src/pages/Process_ServiceRequest/ConsoleTabs/MyAttention.vue
 */
#c-myAttention .jump-link
  color link_text

/**
 * 服务请求设计器
 * src/pages/Process_ServiceRequest/Designer.vue
 */
#designer
  .title-bar
    background #F5F7FA
    .producer
      color gray_l1_text
      .icon-help
        color theme_iconcolor
  ul.designer-menu
    li.activeMenu
      color #ffa954
      border-left 3px solid #ffa954
      background #fff6ee
  .right-content-ctn
    background #fff
    border-radius: 2px;
    box-shadow 0 2px 12px 0 #999

/**
 * 服务请求设计器-步骤一
 * src\pages\Process_ServiceRequest\DesignerSteps\Step1.vue
 */
#serviceCatalog
  .s-tree > .s-tree-node
    > .s-tree-node-content
      border-bottom 2px solid #fff
      background #f2f3f5
    .s-tree-node-content
      &:hover
        color main_text
      .custom-tree-node
        .showChecked,.notShowChecked
          .icon-correct-bold
            color main_text
        .online-offline
          &.online
            background-color green_color
          &.offline
            background-color red_color
        .tree-tool-bar
          .not-delete
            color gray_l3_text

/**
 * 服务请求设计器-步骤二
 * src/pages/Process_ServiceRequest/DesignerSteps/Step2.vue
 */
#setProperty
  .icon-show
    border 1px solid #aaa
  .icon-row
    .icon-col .current
      background #f5f7fa
      border 0 solid #000
      border-radius: 50%
    .icon-col .icon-ctn .iconfont
      color: #000
      opacity: 0.4
    .icon-col .icon-ctn
      &:hover
        background #f5f7fa
        border 0 solid #000
        border-radius: 50%
        .iconfont
          color: #ffa954
          opacity: 1
    .icon-col .current .iconfont
      color: #ffa954
      opacity: 1
  .s-form
    .custom-prepend.is-error
      .s-input-group-prepend
        .s-input-group_prepend
          border 1px solid red_color !important
          border-right 1px solid border_color !important
          .s-select .s-input-suffix .s-input-inner
            border-right none !important

/**
 * 服务请求设计器-步骤五
 * src/pages/Process_ServiceRequest/DesignerSteps/Step5.vue
 */
#accessAuth
  .showGroup
    li
      background #f2f3f5
      .tool-bar .iconfont
        color #ffa954

/**
 * 服务请求设计器-步骤六
 * src/pages/Process_ServiceRequest/DesignerSteps/Step6.vue
 */
#approvalMap
  .showGroup
    li
      background #f2f3f5
      .tool-bar .iconfont
        color #ffa954

/**
 * 服务请求设计器-步骤三-拖拽组件
 * src/pages/Process_ServiceRequest/dragForm/DragForm.vue
 */
#drag-form
  #drag-area
    .drag-item
      color #fff
      background theme_iconcolor
  #drop-area
    border 1px dotted #999
    .tip
      color #aaa
    .iconfont
      color theme_iconcolor

/**
 * 服务请求设计器-步骤三-拖拽组件-定义下拉菜单弹框
 * src/pages/Process_ServiceRequest/DesignerDialog/DefFormList.vue
 */
#def-form-list
  #optionAddLists
    .optionAddList
      background #f2f3f5
    .tool-bar
      .iconfont
        color #ffa954
