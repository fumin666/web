}

// Account_AccountStatus\Status.vue 账号状态统计

.account-status-main-content
  margin 20px
  & .left-nav
    padding-right 15px
  & .right-table
    /*background-color block_bg*/
  .fileList
    padding 10px
    & .handler-btns
      margin-bottom: 12px
    & .s-pagination
      padding: 0
  #formToSearch
    .s-input
      width 120px;

// Account_SecuritySet\SecuritySet.vue

#securitySetDialog
  .s-select
    margin-right: 0
  .tabbox
    border-bottom: 1px solid border_color
    &:last-child
      border-bottom: none
    .s-row
      line-height: 38px
      margin-bottom: 10px
      &:last-child
        margin-top: 15px
        margin-bottom 10px
    .title
      color: title_3
      i
        vertical-align middle
      span
        font-weight 600
        margin-left: 3px
  .tab5
    .s-checkbox
      margin-left: 0
      margin-right: 15px
  .scrollMaxH
    max-height: 500px
  .rightBtn
    float right

  .QRCodeCtn
    text-align center
  img
    width 50%

// Account_SecuritySet\SimpleMenu.vue

.simpleMenu
  cursor pointer
  border-right 1px solid #c4c7cc
  .s-row
    text-align right
    line-height 36px
    margin-bottom 20px
    span
      display inline-block
      padding-right: 5px
      line-height 1
      color title_3
    &.active
      span
        color: theme_iconcolor
        border-right: 3px solid theme_iconcolor
    &:hover
      span
        color: theme_iconcolor
        border-right: 3px solid theme_iconcolor
    &:last-child
      margin-bottom: 0

