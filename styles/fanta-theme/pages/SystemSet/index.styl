// archivingRecovery

.upload-archiving
  position: relative
  .upload-archiving__tip
    position: absolute
    left: 0
    bottom: -15px
    width: 560px
    font-size: 12px
    color: gray_l3_text
    overflow: visible
  .s-upload-list.s-upload-list--text
    display: inline-block
    height: 30px
    .s-col
      width: 100%

.from-server__tip
  position: absolute
  left: 0
  bottom: -15px
  width: 560px
  text-align: right
  font-size: 12px
  color: gray_l3_text
  overflow: visible

.archivingByHand
  a
    color: link_text

//系统设置主页样式
.sysSet .bg {
  background: #F5F7FA
}
.sysSet .ys {
  background: #fff
}
.sysSet .inner{
  height: 130px;
  box-sizing: border-box;
  border-radius: 4px;
}
.sysSet .nav-left{
  background: #fff;
  box-shadow: 0px 0px 4px rgba(123, 134, 164, 0.15), 0px 0px 6px rgba(105, 126, 147, 0.15);
  border-radius: 2px;
  padding-right: 0px;
  height: calc(100vh - 49px);
}
.sysSet .nav-right{
  background: #F5F7FA;
  border-left: 2px solid rgba(123,134,164,.15);
  height: calc(100vh - 49px);
}
.sysSet .myHeight{
  height: 200px;
}
.sysSet .aa{
  background: linear-gradient(90deg, rgba(255, 255, 255, 0) 0%, #444F61 49.79%, rgba(255, 255, 255, 0) 101.22%);
  opacity: 0.2;
  width: 100%;
  height: 4px;
}
.sysSet .set-right{
  position: relative;
}
.sysSet .border {
  border: 1px solid #DCDEE2;height:160px
}
.sysSet .cpu_bg {
  color:#9C9796
}
.sysSet .tzIcon {
  color theme_iconcolor
}
.sysSet
  .page_turn
    a
      float left
      display block
.sysSet
  .main-left
    .headbord
      .s-card-header
        border:1px solid #dcdee2
        border-bottom none!important
