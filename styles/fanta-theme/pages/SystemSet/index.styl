// DiskWarning.vue

@import "./systemSet.styl"
@import "./configCenter.styl"

#disk-warning
  font-size 14px
  margin 20px
  .disk-warn-set
    .s-form
      margin-top 4px
    .disk-form-item
      margin-top: 5px
      text-align center
  .card-title
    color normalcy_text
    .iconfont
      position relative !important
      top 2px !important
  .warn-set-div
    height 450px
    border 1px solid border_color
    padding: 6px;
    position relative
    .warn-set-legend
      position: absolute;
      top: -10px;
      left: 10px;
      height: 30px;
      width: 120px;
      &+div
        margin-top 10px
    .scrollTableHeight
      height 425px
    .s-checkbox
      margin-left 4px
    .s-table
      margin-top 4px
    .field-title
      color normalcy_text
      margin 0 4px
