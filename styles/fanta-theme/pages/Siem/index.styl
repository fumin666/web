// 日志转发配置
.drag-field
  width: calc(100% - 17px)
  .drag-field-itemFields
    display: flex
    flex-direction: column
    justify-content: space-between
    height: 250px
    .drag-item
      display: flex
      flex: 1
      align-items: center
      justify-content: space-between
      background: drag_bg1
      padding: 0 10px
      margin-top: 5px
      color: drag_bg2
      cursor: move
      &.drag-item-canHover:hover
        background: drag_bg2;
        color: #fff
        // border: dashed 1px drag_bg2
        height: 38px
        line-height: 38px
  .dragField-field
    margin-top: 5px
    .dragField-fieldBody
      box-sizing: border-box
      height: 250px - 4px
      border: 1px solid #dcdee2
      overflow: hidden
      &.dragField-fieldBody-hover
        border: 1px dashed drag_bg2
      .s-form .s-form-item
        margin-top: 5px
        margin-bottom: 5px
  .dragField-fieldBody-scroll
    max-height: 250px - 25px
    box-sizing: border-box;
    height: 246px;
    padding: 20px;
    overflow: hidden;
  .icon-delete
    cursor: pointer
    color: #000
    margin-left 4px
.drag-item-image
  display: flex
  flex: 1
  align-items: center
  justify-content: space-between
  border: dashed 1px drag_bg2
  background: drag_bg2
  padding: 0 10px
